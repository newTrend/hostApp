<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hostapp.parminder.hostapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RSVP"
            android:label="@string/title_activity_rsvp" />
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu" />
        <activity
            android:name=".AddMenuItem"
            android:label="@string/title_activity_add_menu_item" />
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".About"
            android:label="@string/title_activity_about" />
        <activity
            android:name=".Invite"
            android:label="@string/title_activity_invite" />
        <activity
            android:name=".InviteByPhoneBook"
            android:label="@string/title_activity_invite_by_phone_book" >
        </activity>
    </application>

</manifest>
